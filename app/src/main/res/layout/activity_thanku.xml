<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/warning_stroke_color"
    android:gravity="center"
    tools:context=".activity.ThankuActivity">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin5"
        app:cardBackgroundColor="@color/selected_tab"
        app:cardCornerRadius="@dimen/margin10"
        app:cardElevation="@dimen/margin5">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/thk" />
    </android.support.v7.widget.CardView>

</LinearLayout>